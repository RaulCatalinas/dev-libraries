---
import ImagePage from '../ImagePage.astro';

interface Props {
  image: string;
  name: string;
}

const { image, name } = Astro.props;
---

<div>
  <div class="flex flex-col items-center pb-1">
    <ImagePage
      imageSrc={image}
      imageAlt={name}
      imageSize={65}
      imageClass="mb-3 group-hover:transition group-hover:ease-in-out group-hover:delay-75 hover:-translate-y-1 group-hover:scale-125 group-hover:duration-300"
    />
  </div>
  <h5
    class="mb-2 text-center text-2xl font-bold tracking-tight text-atlantis-900/95
    dark:text-dark-secondary group-hover:text-green-light-primary"
  >
    {name}
  </h5>
</div>
