---
import AboutDescription from './AboutDescription.astro';
import AboutInfo from './AboutInfo.astro';
import type { AboutUser } from '@/types/about.type';

interface Props {
  aboutUsers: AboutUser[];
}

const { aboutUsers } = Astro.props;
---

<div class="lg:px-4 px-8 pt-6">
  <div class="flex dark:border-dark-tertiary">
    <AboutDescription />
  </div>
  <div class="flex flex-wrap gap-2 justify-center">
    {
      aboutUsers.map((user) => {
        return (
          <div class="group w-full max-w-xs border rounded-lg border-light-border hover:border-green-light-primary dark:border-green-light-primary dark:hover:text-green-light-primary dark:bg-dark-home-card">
            <div class="flex flex-col items-start px-6 pt-6 pb-3">
              <AboutInfo
                userIcon={user.icon}
                userRole={user.role}
                userName={user.name}
                socialNetworks={user.socialNetworks}
              />
            </div>
          </div>
        );
      })
    }
  </div>
</div>
